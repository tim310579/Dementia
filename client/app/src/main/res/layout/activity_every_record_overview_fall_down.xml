<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/layout_every_record"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_problem_item_in_overview_fall_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="跌倒"
                android:textColor="#3747c4"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/tv_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="#事件發生時間"
                android:textColor="#000000"
                android:textSize="23dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="start"
                    android:text="開始:"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <CheckBox
                    android:id="@+id/chk_begin_morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午"
                    android:paddingLeft="-5dp"
                    android:textSize="23dp" />
                <CheckBox
                    android:id="@+id/chk_begin_afternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下午"
                    android:paddingLeft="-5dp"
                    android:textSize="23dp" />
                <EditText
                    android:id="@+id/mEdit_begin_hr"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#d7f4fc"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <TextView
                    android:id="@+id/tv_begin_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="時"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <EditText
                    android:id="@+id/mEdit_begin_min"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#d7f4fc"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <TextView
                    android:id="@+id/tv_begin_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="分"
                    android:textColor="#000000"
                    android:textSize="23dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="結束:"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <CheckBox
                    android:id="@+id/chk_end_morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午"
                    android:paddingLeft="-5dp"
                    android:textSize="23dp" />
                <CheckBox
                    android:id="@+id/chk_end_afternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下午"
                    android:paddingLeft="-5dp"
                    android:textSize="23dp" />
                <EditText
                    android:id="@+id/mEdit_end_hr"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#d7f4fc"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <TextView
                    android:id="@+id/tv_end_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="時"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <EditText
                    android:id="@+id/mEdit_end_min"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="#d7f4fc"
                    android:textColor="#000000"
                    android:textSize="23dp" />
                <TextView
                    android:id="@+id/tv_end_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="分"
                    android:textColor="#000000"
                    android:textSize="23dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="start"
                android:text="#事件簡述"
                android:textColor="#000000"
                android:textSize="23dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/mEdit_event_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:background="@drawable/edit_bg"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="23dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bn_modify"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:background="@drawable/button_frame"
                    android:text="修改"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <Button
                    android:id="@+id/bn_check"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/button_frame"
                    android:text="確定"
                    android:textColor="#000000"
                    android:textSize="25dp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>