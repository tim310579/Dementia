<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按壓時 -->
    <item android:state_pressed="true">
        <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
        <shape android:shape="rectangle">
            <!--設定圓角，當設置的圓角半徑很大，就可變成弧形邊了-->
            <corners android:radius="300dip" />
            <!--邊框-->
            <stroke android:width="5dip" android:color="#888a8a" />
            <!--漸層顏色-->
            <gradient android:angle="-90" android:startColor="#b8b8b8" android:endColor="#b8b8b8"  />
        </shape>
    </item>

    <!-- 預設時 -->
    <item android:color="@android:color/black">
        <shape android:shape="rectangle">
            <corners android:radius="300dip" />
            <stroke android:width="5dip" android:color="#888a8a" />
            <gradient android:angle="-90" android:endColor="#d0d0d0" android:startColor="#d0d0d0" />
        </shape>
    </item>

</selector>