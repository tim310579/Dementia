            <LinearLayout
                android:id="@+id/layout_records"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                >
            </LinearLayout>


            <TableLayout
                android:id="@+id/table_subject_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="200dp"
                android:stretchColumns="2"

                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_frame"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="感測器"
                            android:textColor="#000000"
                            android:textSize="17dp"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_frame"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="手錶"
                            android:textColor="#000000"
                            android:textSize="17dp"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"

                            android:background="@drawable/table_frame"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="編號"
                            android:textColor="#000000"
                            android:textSize="17dp"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"

                            android:background="@drawable/table_frame"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="受試者姓名"
                            android:textColor="#000000"
                            android:textSize="17dp"/>
                        <TextView
                            android:id="@+id/tv_today_record_cnt"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/table_frame"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="本日記錄筆數"
                            android:textColor="#000000"
                            android:textSize="17dp"/>

                    </TableRow>
                </HorizontalScrollView>

            </TableLayout>

            <TableLayout
                android:id="@+id/table_subject_subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="200dp"
                >

            </TableLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <TableLayout
                    android:id="@+id/table_subject_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minWidth="200dp"
                    >
                </TableLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/bn_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_frame"
                android:text="結束登出"
                android:textColor="#000000"
                android:textSize="30dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>